{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Top 10 Country In Total Number of Suicide",
  "width": 600,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/limhanwei123/3179/main/suicide/top10suicidecountry.csv"
  },
  "transform": [
    {
      "calculate": "datum.total_suicide/datum.total_population * 100000",
      "as": "Cases per 100,000 Population"
    }
  ],
  "encoding": {
    "x": {"field": "country", "type": "nominal", "title": "Country","axis": {"labelAngle": -45}},
    "y": {
      "field": "total_suicide",
      "type": "quantitative",
      "title": "Total Suicide"
    }
  },
  "layer": [
    {
      "params": [
        {
          "name": "continent_highlight",
          "select": {"type": "point", "fields": ["continent"]},
          "bind": "legend"
        }
      ],
      "mark": "bar",
      "encoding": {
        "color": {
          "field": "continent",
          "type": "nominal",
          "scale": {
            "domain": ["North America", "South America", "Europe", "Asia"],
            "range": ["#e41a1c", "#984ea3", "#ff7f00", "#377eb8"]
          }
        },
        "opacity": {
          "condition": {"param": "continent_highlight", "value": 0.6},
          "value": 0.2
        },
        "tooltip": [
          {"field": "country", "type": "nominal", "title": "Country"},
          {
            "field": "total_suicide",
            "type": "quantitative",
            "title": "Total Number of Suicide"
          },
          {
            "field": "Cases per 100,000 Population",
            "type": "quantitative",
            "title": "Suicide Rate",
            "format": ".2f"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "top",
        "fontSize": 20,
        "fontStyle": "italic",
        "dx": -35,
        "dy": -10,
        "fontWeight": "bold"
      },
      "transform": [
        {"filter": {"param": "continent_highlight"}},
        {"calculate": "datum['country'] + ';' + datum['total_suicide']", "as": "textresraw"},
        {"calculate": "split(datum.textresraw,';')", "as": "textres"}
      ],
      "encoding": {
        "text": {"field": "textres"},
        "color": {"value": "red"},
        "opacity": {
          "condition": {
            "test": "datum.country=='Russia'",
            "value": 1
          },
          "value": 0
        }
      }
    }
  ]
}
